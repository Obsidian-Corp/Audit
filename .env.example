# =====================================================
# OBSIDIAN AUDIT - ENVIRONMENT CONFIGURATION
# =====================================================
# Copy this file to .env and fill in your values
# NEVER commit .env files to version control
# =====================================================

# =====================================================
# SUPABASE CONFIGURATION (Required)
# =====================================================
# Get these from your Supabase project settings
VITE_SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
VITE_SUPABASE_ANON_KEY=your_anon_key_here

# Service role key (server-side only - NEVER expose to client)
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Database connection string (for direct database access)
DATABASE_URL=postgresql://postgres:[PASSWORD]@db.[PROJECT_REF].supabase.co:5432/postgres

# =====================================================
# APPLICATION CONFIGURATION
# =====================================================
# Base URL of the application
VITE_APP_URL=http://localhost:8080
SITE_URL=http://localhost:8080

# Environment mode
NODE_ENV=development

# Application name and version
VITE_APP_NAME=Obsidian Audit
VITE_APP_VERSION=0.1.0

# =====================================================
# AUTHENTICATION CONFIGURATION
# =====================================================
# JWT token expiration (in seconds)
VITE_JWT_EXPIRATION=3600

# Session timeout (in minutes)
VITE_SESSION_TIMEOUT=60

# Enable/disable email confirmation
VITE_REQUIRE_EMAIL_CONFIRMATION=true

# =====================================================
# EMAIL CONFIGURATION (Optional)
# =====================================================
# Resend API for transactional emails
RESEND_API_KEY=re_your_resend_api_key

# Email sender configuration
EMAIL_FROM_ADDRESS=noreply@yourdomain.com
EMAIL_FROM_NAME=Obsidian Audit

# =====================================================
# FEATURE FLAGS
# =====================================================
# Enable/disable features for gradual rollout
VITE_FEATURE_WORKPAPERS=true
VITE_FEATURE_ANALYTICS=true
VITE_FEATURE_CONFIRMATIONS=true
VITE_FEATURE_RISK_ASSESSMENT=true
VITE_FEATURE_PROCEDURES=true
VITE_FEATURE_FINDINGS=true
VITE_FEATURE_PROFESSIONAL_STANDARDS=true
VITE_FEATURE_GROUP_AUDITS=true
VITE_FEATURE_EQCR=true

# =====================================================
# FILE STORAGE CONFIGURATION
# =====================================================
# Maximum file upload size in bytes (default: 50MB)
VITE_MAX_FILE_SIZE=52428800

# Allowed file types (comma-separated)
VITE_ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.xls,.xlsx,.csv,.png,.jpg,.jpeg,.gif

# Storage bucket name
VITE_STORAGE_BUCKET=audit-files

# =====================================================
# SECURITY CONFIGURATION
# =====================================================
# Content Security Policy (production should be stricter)
VITE_CSP_ENABLED=true

# Rate limiting (requests per minute)
VITE_RATE_LIMIT_RPM=100

# Enable audit logging
VITE_AUDIT_LOGGING=true

# Session security
VITE_SECURE_COOKIES=false

# =====================================================
# MONITORING & OBSERVABILITY (Optional)
# =====================================================
# Sentry error tracking
VITE_SENTRY_DSN=
VITE_SENTRY_ENVIRONMENT=development

# LogRocket session replay
VITE_LOGROCKET_APP_ID=

# Google Analytics
VITE_GA_TRACKING_ID=

# =====================================================
# DEVELOPMENT CONFIGURATION
# =====================================================
# Enable React Query DevTools
VITE_ENABLE_DEVTOOLS=true

# Enable debug logging
VITE_DEBUG=false

# Mock API responses (for development without backend)
VITE_MOCK_API=false

# =====================================================
# MULTI-TENANT CONFIGURATION
# =====================================================
# Default organization mode
VITE_NO_ORG_MODE=false

# Enable impersonation (admin only)
VITE_ENABLE_IMPERSONATION=true

# =====================================================
# PRODUCTION-ONLY SETTINGS
# =====================================================
# These should only be set in production environments

# CDN URL for static assets
# VITE_CDN_URL=https://cdn.yourdomain.com

# API rate limiting
# VITE_API_RATE_LIMIT=1000

# Cache TTL (in seconds)
# VITE_CACHE_TTL=3600

# Enable compression
# VITE_ENABLE_COMPRESSION=true
